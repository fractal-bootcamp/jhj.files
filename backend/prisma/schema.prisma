generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// models

// user
model User {
  // metadata
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // fields
  email     String   @unique
  name      String?
  clerkId   String   @unique
  files     File[]

  @@map("user")
}

model File {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  filename  String
  key       String
  s3Url     String
  mimetype  String // Added this line
  size      Int // Added this line
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@map("file")
}
