generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  name      String?
  clerkId   String   @unique
  files     File[]

  @@map("user")
}

model File {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  filename  String
  s3Key     String
  s3Url     String
  userId    String
  mimetype  String
  size      Int
  user      User     @relation(fields: [userId], references: [id])

  @@map("file")
}
